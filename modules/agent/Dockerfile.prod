# syntax=docker/dockerfile:1.6
FROM python:3.12-slim
WORKDIR /app

# Install OS dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    git \
    build-essential \
    ca-certificates \
 && rm -rf /var/lib/apt/lists/*

# Set Python environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1

# Copy dependency files first (for better layer caching)
COPY pyproject.toml README.md ./
COPY src ./src

# Install Python dependencies using pip directly (not uv)
# This ensures console scripts are properly installed to /usr/local/bin
RUN pip install --no-cache-dir -e .

# Verify installations
RUN langgraph --version && echo "âœ“ langgraph CLI is accessible"

# Copy the rest of the application (config files, scripts, etc.)
COPY . .

# Give execution permissions to the start script
RUN chmod +x start-prod.sh

# Expose ports (8080 for HTTP/health checks, 2024 for LangGraph)
EXPOSE 8080 2024

# Start the application
CMD ["./start-prod.sh"]