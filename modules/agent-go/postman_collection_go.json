  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "const audience = pm.environment.get('auth0_audience');",
          "const domain = pm.environment.get('auth0_domain');",
          "const clientSecret = pm.environment.get('auth0_client_secret');",
          "const clientId = pm.environment.get('auth0_client_id');",
          "const username = pm.environment.get('auth0_username');",
          "const password = pm.environment.get('auth0_password');",
          "const connection = pm.environment.get('auth0_connection');",
          "",
          "pm.sendRequest({",
          "  url: `https://${domain}/oauth/token`,",
          "  method: 'POST',",
          "  header: {",
          "    'Content-Type': 'application/json'",
          "  },",
          "  body: {",
          "    mode: 'raw',",
          "    raw: JSON.stringify({",
          "      client_id:     clientId,",
          "      client_secret: clientSecret,",
          "      audience:      audience,",
          "      username:      username,",
          "      password:      password,",
          "      grant_type:    'password',",
          "      scope:         'openid profile email',",
          "      connection:    connection || 'Username-Password-Authentication'",
          "    })",
          "  }",
          "}, (err, res) => {",
          "  if (err) {",
          "    console.error('Auth0 token request failed:', err);",
          "    return;",
          "  }",
          "  const json = res.json();",
          "  if (json.access_token) {",
          "    pm.environment.set('bearer_token', json.access_token);",
          "  }",
          "});"
        ]
      }
    }
  ],
